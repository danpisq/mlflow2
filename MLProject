name: multistep

conda_env: conda.yaml

entry_points:
  etl: 
    command: "python etl.py "
 
  train:
    parameters:
      data-file: path
      alpha: {type: float, default: 0.1}
      l1-ratio: {type: float, default: 0.1}
    command: "python train.py --data-file {data-file} --alpha {alpha} --l1-ratio {l1-ratio}"

  main: 
    parameters:
      data-file: path
      alpha: {type: float, default: 0.1}
      l1-ratio: {type: float, default: 0.1}
    command: "python main.py --data-file {data-file} --alpha {alpha} --l1-ratio {l1-ratio}"